# Security - Disable lifecycle scripts (prevents malicious package execution)
ignore-scripts=true

# Privacy - Disable funding messages
fund=false

# Version Management - Save exact versions to prevent unexpected updates
save-exact=true

# Lock Management - Ensure package-lock.json is always created and updated
package-lock=true

# Registry Security - Use official npm registry
registry=https://registry.npmjs.org/

# SSL/TLS - Enforce certificate validation
strict-ssl=true

# Auditing - Enable automatic security audits with high severity threshold
audit=true
audit-level=high

# Telemetry - Disable update notifier
update-notifier=false

# Optional: Prevent Git dependencies (forces all deps from npm registry)
# git=false

# Optional: Enable timing for debugging slow installs
# timing=true
